--[[
    Nocturne UI
    By: Kaizel
    Note: Infinite Jump, Anti-AFK, Auto Fish siap pakai (tinggal isi nama event & argumen)
]]

-- Load UI Library (Rayfield)
local Nocturne = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Window Utama
local MainUI = Nocturne:CreateWindow({
    Name = "Nocturne Premium",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "by Kaizel",
    ConfigurationSaving = { Enabled = false }
})

-- Variabel untuk Auto Fish
local AutoFishEnabled = false
local AutoFishLoop

-- AUTO FISH TAB
local AutoFishTab = MainUI:CreateTab("Auto Fish", 4483362458)
AutoFishTab:CreateToggle({
    Name = "Enable Auto Fish",
    CurrentValue = false,
    Flag = "AutoFish",
    Callback = function(Value)
        AutoFishEnabled = Value
        print("Auto Fish: "..tostring(Value))

        if AutoFishEnabled then
            AutoFishLoop = task.spawn(function()
                while AutoFishEnabled do
                    pcall(function()
                        -- Ganti sesuai nama RemoteEvent di game kamu
                        local fishingEvent = game:GetService("ReplicatedStorage"):WaitForChild("FishingEvent") 
                        local args = {
                            "CastLine", -- contoh argumen
                            math.random(1,100) -- contoh tambahan, ubah sesuai kebutuhan
                        }
                        fishingEvent:FireServer(unpack(args))
                        print("[Auto Fish] Casting fishing line...")
                    end)
                    task.wait(3) -- Delay antar cast (atur sesuai kebutuhan)
                end
            end)
        else
            if AutoFishLoop then
                task.cancel(AutoFishLoop)
                AutoFishLoop = nil
            end
        end
    end
})

-- AUTO WEATHER
local AutoWeatherTab = MainUI:CreateTab("Auto Weather", 4483362458)
AutoWeatherTab:CreateToggle({
    Name = "Enable Auto Weather",
    CurrentValue = false,
    Callback = function(Value)
        print("Auto Weather: "..tostring(Value))
        -- isi script auto weather di sini
    end
})

-- TRADE
local TradeTab = MainUI:CreateTab("Trade", 4483362458)
TradeTab:CreateInput({
    Name = "Trade with Player",
    PlaceholderText = "e.g. Player123",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        print("Trading with: "..Text)
        -- isi script trade di sini
    end
})

-- PLAYER MENU
local PlayerTab = MainUI:CreateTab("Player", 4483362458)
PlayerTab:CreateSlider({
    Name = "Walk Speed",
    Range = {16, 200},
    Increment = 1,
    CurrentValue = 16,
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
})

-- Infinite Jump Toggle
local InfiniteJumpEnabled = false
PlayerTab:CreateToggle({
    Name = "Infinite Jump",
    CurrentValue = false,
    Callback = function(Value)
        InfiniteJumpEnabled = Value
        print("Infinite Jump: "..tostring(Value))
    end
})

-- Infinite Jump Handler
game:GetService("UserInputService").JumpRequest:Connect(function()
    if InfiniteJumpEnabled then
        local char = game.Players.LocalPlayer.Character
        if char and char:FindFirstChildOfClass("Humanoid") then
            char:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
        end
    end
end)

-- Anti-AFK
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    task.wait(1)
    vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    print("[Anti-AFK] Triggered to prevent kick.")
end)

-- UTILITY / BUG COINS
local UtilityTab = MainUI:CreateTab("Utility", 4483362458)
UtilityTab:CreateSection("WARNING!!\nBUG COINS RISK BANNED!!\nLevel 20+ & Empty Bag Recommended")
UtilityTab:CreateInput({
    Name = "Bug Coins Target Player",
    PlaceholderText = "e.g. Player123",
    RemoveTextAfterFocusLost = false,
    Callback = function(Text)
        print("Bug coins target: "..Text)
        -- isi script bug coins di sini
    end
})
UtilityTab:CreateToggle({
    Name = "Enable Bug Coins",
    CurrentValue = false,
    Callback = function(Value)
        print("Bug Coins Enabled: "..tostring(Value))
        -- isi script bug coins di sini
    end
})

-- SETTINGS
local SettingsTab = MainUI:CreateTab("Settings", 4483362458)
SettingsTab:CreateButton({
    Name = "Destroy UI",
    Callback = function()
        Nocturne:Destroy()
    end
})
